{{!-- need a button to submit user input --}}
<div class="container">
    <div class="jumbotron text-center">
        <h1>Eat-Da-Burga!</h1>
    </div>
    <div class="row">
        <div class="col-sm-12 m-auto">
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header alert-info text-center">
                            Here are your Burgas; Ready to be devoured!
                        </div>
                        <ol>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <li>{{burger_name}} <button type="submit" class="btn btn-info btn-sm devourBtn" data-id="{{id}}">Devour It!</button></li>
                            {{/unless}}
                        {{/each}}
                        </ol>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-header alert-info text-center">
                            Destroyed Burgers 
                        </div>
                        <ol>
                        {{#each burgers}}
                            {{#if devoured}}
                                <li>{{burger_name}}</li>
                            {{/if}}
                        {{/each}}
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row form-row">
        <div class="col">
            <div class="row">
                <div class="col-6 m-auto text-center">
                    <h4>Build Your Own Burger!</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-6 m-auto text-center">
                    <form class="create-form">
                        <div class="form-group">
                            <input type="text" id="burger" name="name">
                        </div>
                        <button type="submit" id="submitBtn" class="btn btn-small border-info text-info alert-info">Submit my burga!</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-6 m-auto text-center">
                    <p>
                    Enter a burger you'd like to eat. Click the submit button to eat it!
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>